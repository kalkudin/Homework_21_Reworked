<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_image"
        android:layout_width="150dp"
        android:layout_height="210dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/item_shop_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="55dp"
        android:paddingTop="12dp"
        android:scaleType="centerCrop"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/ic_heart"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="@+id/ic_image"
        app:layout_constraintTop_toTopOf="@+id/ic_image"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_clothes"
        android:textColor="@color/text_color"
        app:layout_constraintTop_toBottomOf="@+id/ic_image"
        app:layout_constraintStart_toStartOf="@id/ic_image"
        android:layout_marginTop="12dp"
        android:textSize="14sp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_price"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        android:layout_marginTop="6dp"
        android:textSize="14sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>